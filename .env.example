# VLA Arena Environment Configuration
#
# This file contains all environment variables used by the VLA Arena project.
# Copy this file to .env and update the values as needed.

# =============================================================================
# VLA Server Configuration
# =============================================================================

# Server
VLA_HOST=0.0.0.0
VLA_PORT=8001
VLA_RELOAD=true

# Models
VLA_MUJOCO_MODEL_PATH=./vla-server/models
VLA_VLA_MODEL_CACHE=./vla-server/model_cache
VLA_DEFAULT_VLA_MODEL=octo-small
VLA_DEVICE=auto  # auto (cuda → mps → cpu), cuda, cpu, mps

# Execution - based on RT-1/Octo standards
VLA_CONTROL_FREQUENCY=5.0  # Hz (RT-1/Octo standard: 3-5 Hz)
VLA_MAX_EPISODE_SECONDS=15.0  # seconds (typical task duration)

# Logging
VLA_LOG_LEVEL=INFO

