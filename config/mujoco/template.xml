<mujoco model="{model_name}">
  <compiler angle="radian"/>
  <option timestep="0.002"/>

  <asset>
    <texture name="grid" type="2d" builtin="checker" width="512" height="512"/>
    <material name="grid" texture="grid" texrepeat="1 1" texuniform="true"/>
  </asset>

  <worldbody>
    <light pos="0 0 3" dir="0 0 -1"/>
    <geom name="floor" pos="0 0 0" size="0 0 .05" type="plane" material="grid"/>

    {scene_body}
    {robot_body}
  </worldbody>

  <!-- Actuators for 7 joints + gripper -->
  <actuator>
    <motor name="motor1" joint="joint1" ctrlrange="-87 87" ctrllimited="true"/>
    <motor name="motor2" joint="joint2" ctrlrange="-87 87" ctrllimited="true"/>
    <motor name="motor3" joint="joint3" ctrlrange="-87 87" ctrllimited="true"/>
    <motor name="motor4" joint="joint4" ctrlrange="-87 87" ctrllimited="true"/>
    <motor name="motor5" joint="joint5" ctrlrange="-12 12" ctrllimited="true"/>
    <motor name="motor6" joint="joint6" ctrlrange="-12 12" ctrllimited="true"/>
    <motor name="motor7" joint="joint7" ctrlrange="-12 12" ctrllimited="true"/>
    <motor name="gripper_motor" joint="gripper" ctrlrange="-1 1" ctrllimited="true"/>
  </actuator>
</mujoco>
